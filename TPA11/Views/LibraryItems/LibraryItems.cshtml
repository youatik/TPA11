@model List<LibraryItem>

<h1>Library Items</h1>

<table class="table">
    <thead>
        <tr>
            <th>EAN / ISBN</th>
            <th>Title</th>
            <th>Creators</th>
            <th>Description</th>
            <th>Image</th> <!-- New column header for the Image -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ean_isbn13</td>
                <td>@item.Title</td>
                <td>@item.Creators</td>
                <td>@item.Description</td>
                <td><img src="@String.Format("https://covers.openlibrary.org/b/isbn/{0}-M.jpg", item.ean_isbn13)" alt="Book cover for @item.Title" /></td>
                <!-- The image for the ISBN is inserted here using String.Format to interpolate the ISBN -->
            </tr>
        }
    </tbody>
</table>
